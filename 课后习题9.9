public class naiguan {
		private int n;//边数
		private double side;
		private double x;	
		private double y;
public naiguan()
{
	this.n = 3;
	this.side = 1;
	this.x = 0;
	this.y = 0;
	}
public naiguan(int n,double side)
{
	this.n = n;
	this.side = side;
}
public naiguan(int n,double side,double x,double y)
{
	this.n = n;
	this.side = side;
	this.x = x;
	this.y = y;
	}
public int getn()
{
	return this.n;
}
public double getside()
{
	return this.side;
}
public double getx()
{
	return this.x;
}

public double gety()
{
	return this.y;
}
public double getPerimeter()
{
	return this.n * this.side;
}
public double getArea()
{
	return (this.n * this.side * this.side) / (4 * Math.tan(Math.PI/this.n));
}
}
